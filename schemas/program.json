{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "/schemas/program",
    "$comment": "Definition for program",
    "type": "object",
    "properties": {
        "id": {
            "$comment": "ID (as unix timestamp)",
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "steps": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "$comment": "Name of the step",
                        "type": "string"
                    },
                    "type": {
                        "$comment": "Type of step",
                        "type": "string",
                        "enum": [
                            "heating",
                            "cooling",
                            "acclimating"
                        ]
                    },
                    "temperature_constraint": {
                        "$comment": "Valid temperature range (material)",
                        "type": "object",
                        "properties": {
                            "minimum": {
                                "$comment": "Minimum temperature in Celsius",
                                "type": "number"
                            },
                            "maximum": {
                                "$comment": "Maximum temperature in Celsius",
                                "type": "number"
                            }
                        },
                        "oneOf": [
                            {
                                "required": [
                                    "power"
                                ]
                            },
                            {
                                "required": [
                                    "max_delta"
                                ]
                            }
                        ]
                    },
                    "heater": {
                        "power": {
                            "$comment": "Power level of the fan (0-100)",
                            "type": "number"
                        },
                        "max_delta": {
                            "$comment": "Maximum temperature difference allowed (Celsius)",
                            "type": "number"
                        },
                        "pid": {
                            "$comment": "PID values for the heater",
                            "type": "object",
                            "properties": {
                                "kp": {
                                    "$comment": "Proportional gain",
                                    "type": "number"
                                },
                                "ki": {
                                    "$comment": "Integral gain",
                                    "type": "number"
                                },
                                "kd": {
                                    "$comment": "Derivative gain",
                                    "type": "number"
                                }
                            },
                            "required": [
                                "kp",
                                "ki",
                                "kd"
                            ]
                        },
                        "oneOf": [
                            {
                                "required": [
                                    "power"
                                ]
                            },
                            {
                                "required": [
                                    "max_delta"
                                ]
                            }
                        ]
                    },
                    "fan": {
                        "power": {
                            "$comment": "Power level of the fan (0-100)",
                            "type": "number"
                        }
                    },
                    "humidifier": {
                        "power": {
                            "$comment": "Power level of the humidifier (0-100)",
                            "type": "number"
                        }
                    }
                },
                "allOf": [
                    {
                        "required": [
                            "power"
                        ]
                    },
                    "humidifier": {
                        "power": {
                            "$comment": "Power level of the humidifier (0-100)",
                            "type": "number"
                        },
                        "required": [
                            "power"
                        ]
                    }
                },
                "required": [
                    "heater",
                    "fan",
                    "humidifier",
                    "temperature_target"
                ]
            },
            "minLength": 1
        }
    },
    "required": [
        "name",
        "steps"
    ]
}
