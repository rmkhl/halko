{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "/schemas/program",
    "$comment": "Definition for program",
    "type": "object",
    "properties": {
        "id": {
            "$comment": "ID (as unix timestamp)",
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "steps": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "$comment": "Name of the step",
                        "type": "string"
                    },
                    "type": {
                        "$comment": "Type of step",
                        "type": "string",
                        "enum": [
                            "heating",
                            "cooling",
                            "acclimate"
                        ]
                    },
                    "temperature_target": {
                        "$comment": "Target temperature in Celsius",
                        "type": "number",
                        "minimum": 0,
                        "maximum": 200
                    },
                    "heater": {
                        "type": "object",
                        "properties": {
                            "power": {
                                "$comment": "Constant power level of the heater (0-100)",
                                "type": "number",
                                "minimum": 0,
                                "maximum": 100
                            },
                            "min_delta": {
                                "$comment": "Minimum temperature difference allowed (Celsius)",
                                "type": "number",
                                "minimum": 0,
                                "maximum": 20
                            },
                            "max_delta": {
                                "$comment": "Maximum temperature difference allowed (Celsius)",
                                "type": "number",
                                "minimum": 0,
                                "maximum": 40
                            },
                            "pid": {
                                "$comment": "PID values for the heater",
                                "type": "object",
                                "properties": {
                                    "kp": {
                                        "$comment": "Proportional gain",
                                        "type": "number"
                                    },
                                    "ki": {
                                        "$comment": "Integral gain",
                                        "type": "number"
                                    },
                                    "kd": {
                                        "$comment": "Derivative gain",
                                        "type": "number"
                                    }
                                },
                                "required": [
                                    "kp",
                                    "ki",
                                    "kd"
                                ]
                            }
                        },
                        "oneOf": [
                            {
                                "required": [
                                    "power"
                                ]
                            },
                            {
                                "required": [
                                    "max_delta"
                                ]
                            }
                        ]
                    },
                    "fan": {
                        "type": "object",
                        "properties": {
                            "power": {
                                "$comment": "Power level of the fan (0-100)",
                                "type": "number",
                                "minimum": 0,
                                "maximum": 100
                            }
                        },
                        "required": [
                            "power"
                        ]
                    },
                    "humidifier": {
                        "type": "object",
                        "properties": {
                            "power": {
                                "$comment": "Power level of the humidifier (0-100)",
                                "type": "number",
                                "minimum": 0,
                                "maximum": 100
                            }
                        },
                        "required": [
                            "power"
                        ]
                    }
                },
                "required": [
                    "name",
                    "type",
                    "heater",
                    "fan",
                    "humidifier",
                    "temperature_target"
                ]
            },
            "minItems": 1
        }
    },
    "required": [
        "name",
        "steps"
    ]
}
