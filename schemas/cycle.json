{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "/schemas/cycle",
    "$comment": "Definition for power cycle, each cycle is 60 seconds",
    "type": "object",
    "properties": {
        "id": {
            "$comment": "ID (as unix timestamp)",
            "type": "string"
        },
        "name": {
            "$comment": "Name for the power cycle",
            "type": "string"
        },
        "states": {
            "$comment": "Power state (on/off) for each consecutive 6 second that make up the cycle",
            "type": "array",
            "minItems": 10,
            "maxItems": 10,
            "items": {
                "type": "boolean"
            }
        }
    },
    "required": [
        "name",
        "states"
    ]
}
